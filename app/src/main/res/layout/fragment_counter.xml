<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CounterFragment"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/counter_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Screen #1"
        android:textSize="50sp"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textColor="@color/purple_700"/>

    <TextView
        android:id="@+id/quote_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quote_text"
        android:gravity="center"
        android:padding="8dp"/>

    <Button
        android:id="@+id/btn_launch_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_launch_next"
        android:layout_marginTop="16dp"
        />

    <Button
        android:id="@+id/btn_go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_go_back" />

</LinearLayout>